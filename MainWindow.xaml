<Window x:Class="drag_and_drop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="drag_and_drop" Height="Auto" Width="Auto">
    <Canvas Name="Canvass"
             Drop="Panel_Drop"
            AllowDrop="True"
            Background="Black"
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch">
        <Grid Name="gride" 
            HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0"
             Name="blue"
            Background="Blue"
             Drop="Panel_Drop"
            AllowDrop="True">
                <Ellipse  
             DragOver="Panel_DragOver"
            MouseMove="Panel_MouseMove"
            Canvas.Left="50"
            Canvas.Top="50"
            Height="100" Width="100"
            Fill="red" />
            </StackPanel>
            <StackPanel Grid.Column="1"
             Name="pink"
            Background="pink"
            AllowDrop="True"
            Drop="Panel_Drop">
            </StackPanel>
        </Grid>
    </Canvas>

</Window>
