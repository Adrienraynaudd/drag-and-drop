<Window x:Class="drag_and_drop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="drag_and_drop" Height="350" Width="600">
    <Grid Name="gride">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0"
            Background="Beige"
             Drop="Panel_Drop"
            AllowDrop="True">
            <Ellipse  
             DragOver="Panel_DragOver"
            MouseMove="Panel_MouseMove"
            InkCanvas.Left="50"
            InkCanvas.Right="50"
            Height="100" Width="100"
            Fill="red" />
        </StackPanel>
        <StackPanel Grid.Column="1"
            Background="Bisque"
            AllowDrop="True"
            Drop="Panel_Drop">
		</StackPanel>

		<!-- cette Grid occupe toute la surface de l'écran (Background="Red") -->
		<Grid x:Name="DNDContainer" Grid.ColumnSpan="2">
			
		</Grid>
	</Grid>
</Window>
