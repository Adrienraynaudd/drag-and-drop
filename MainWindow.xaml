<Window x:Class="drag_and_drop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="drag_and_drop" Height="350" Width="600">
    <Canvas Name="gride"
        Background="Beige"
             Drop="Panel_Drop"
            AllowDrop="True">
        <Rectangle
             x:Name="circleUI" 
            Canvas.Left="50"
            Canvas.Top="50"
             DragOver="Panel_DragOver"
            MouseMove="Panel_MouseMove"
            Height="100" Width="100"
            Fill="red" />
    </Canvas>

</Window>
